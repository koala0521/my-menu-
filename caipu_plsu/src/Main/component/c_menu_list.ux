		<list class="single-list">
			<block for="{{list.list}}"  >
				<list-item type="items" class="single-product" onclick="toDetail( $item )">
					<div>
						<image class="single-image" src="{{$item.pic}}"></image>
					</div>
					<div class="single-description">
						<text class="single-title">{{$item.name}}</text>
						<text class="single-brief">{{$item.content}}</text>
						<div class="single-bottom">
							<div>
								<text class="single-author">{{$item.author}}</text>
							</div>
							<div class="single-div-clazz">
								<text for="{{$item.menuClazz}}" class="single-clazz">{{$item }}</text>
							</div>
						</div>
					</div>
				</list-item>
				<list-item if="{{ $idx == 2 && adState.showAd }}" type="{{ $idx }}" class="ad-wrap single-product" >
					<wanka_ad_view
						type="native"
						adslot_id="{{ adState.adId }}"
						width="{{700}}"
						height="{{320}}"
						@ad-error="onadError"
					></wanka_ad_view>
				</list-item>	
			</block>		
		</list>
		<!-- <loading if="showLoading" ></loading> -->
	</div>
</template>

