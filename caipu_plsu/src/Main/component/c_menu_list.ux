<script>
import router from '@system.router';

export default {
	data: {
		list: {
			// title: "菜谱列表",
			// subtitle: "更多",
			// arrow: "./img/arrow.png",
		 	list:[]
		},
		adState:{
			showAd: true,
			adId: '4374'
		},
		showLoading: true,		
	},
	props: {
		menuList : {
			type: Array,
			default: []
		},
		showWankaAd: false
	},
	press(item) {
		console.error("on press event param : " + item);
	},
	toDetail(item) {

		//跳转到应用内的某个页面
		router.push({
			uri: "/Page_menuDetail",
			params:{
				infos: JSON.stringify(item),
				id: 100
			}
		})
	},

	onInit() {
		
		// 监听数据变化
      	this.$watch('menuList', 'computedListData')

	},

	computedListData(newVal,oldVal){

		if(newVal.length == 0) return []
		this.list.list = newVal.map(el =>{
			let menuClazz = el.tag.split(',').slice(0,3);
			return Object.assign({},el,{ menuClazz });
			 
		})
		console.log(`this.list.list ============== >` , this.list.list);
		

	},
	onadError(args){
		console.log(`onadError >>>` , args);
		
	}
}
</script>